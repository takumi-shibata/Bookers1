<body>
	<h1>Editing Book</h1>

  <%= form_for(@book) do |f| %>
	   <p>
		  <%= f.label :title, "Title" %><br>
		  <%= f.text_field :title %>
	   </p>
	   <p>
		  <%= f.label :body, "Body" %><br>
		  <%= f.text_area :body %>
	   </p>
	   <p>
	   	  <%= f.submit "Update Book" %>
	   </p>
  <% end %>
  
  <%= link_to "Show",book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back",books_path %>
</body>