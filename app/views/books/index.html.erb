<body>
  <p id="notice"><%= notice %></p>
  <h1>Books</h1>
  <table>
  	  <thead>
  		  <tr>
  			 <th>Title</th>
  			 <th>Body</th>
  			 <th></th>
  		  </tr>
  	  </thead>
  	  <% @books.each do |book| %>
  	  <tbody>
  	  	  <tr>
  	  		   <td class="index-book-title"><%= book.title %></td>
  	  		   <td class="index-book-body"><%= book.body %></td>
  	  		   <td class="index-links">
  	  		     <span class="link"><%= link_to "Show",book_path(book.id) %></span>
  	  		     <span class="link"><%= link_to "Edit", edit_book_path(book.id) %></span>
  	  		     <span class="link"><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></span>
             </td>
  	  	  </tr>
  	  </tbody>
      <% end %>
  </table>



  <h2>New book</h2>
  <%=form_for(@book) do |f| %>

  <% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

    <p>
      <%= f.label :title, "Title" %> <br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body, "Body" %> <br>
      <%= f.text_area :body %>
    </p>
    <%= f.submit "Create Book" %>
  <% end %>
</body>